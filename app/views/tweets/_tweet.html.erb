<div class="mb-3 card card-body">
    <%= tweet.body %>
    
    <div class="me-4">
        <%= image_tag tweet.twitter_account.avatar, class: "rounded-circle"%>
        <%= link_to "@#{tweet.twitter_account.username }", "https://twitter.com/#{tweet.twitter_account.username}", target: "_blank" %>
    </div>


    <% if tweet.published? %>
        <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: "_blank"%>
    <% else %>
        <strong>
            Scheduled for: <%= l tweet.publish_at, format: :short  %>
        </strong>

        <div class="d-flex flex-row justify-content-end align-items-center">
        <%= link_to "Edit Tweet", edit_tweet_path(tweet) %>
        <%= button_to "Unschedule", tweet_path(tweet),  method: :delete, style: "margin-left: 8px", class: "btn btn-outline-danger btn-sm", data: {turbo: false, confirm: "Are you sure?"} %>
        </div>
     
    <% end %>
</div>